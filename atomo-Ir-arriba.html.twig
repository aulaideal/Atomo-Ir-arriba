{% extends '@nucleus/partials/particle.html.twig' %}

{% block javascript_footer %}
    {% if particle.enabled %}
        {% do gantry.load('jquery') %}
        {{ parent() }}
        
            <script>
                (function($) {
                    $(window).load(function() {


                     $('body').append('<a class="ir-arriba ir-arriba-{{ particle.efecto|e }}-defecto" href="#" style="background:{{ particle.colorfondo|e }}; border-radius:{{ particle.border-radius|e }}; width:{{ particle.anchura|e }}; height:{{ particle.altura|e }};"><i class="{{ particle.buttonicon|e }}" style="color:{{ particle.coloricono|e }};"aria-hidden="true"> </i> </a>');  
                    

                     $(window).scroll(function () {
					if ($(this).scrollTop() > {{ particle.offset|e }}) {
						$('.ir-arriba').addClass('ir-arriba-{{ particle.efecto|e }}');
					} else {
						$('.ir-arriba').removeClass('ir-arriba-{{ particle.efecto|e }}');
					}
					});

                     $('.ir-arriba').click(function () {
					 $('body,html').animate({
						scrollTop: 0,
						}, {{ particle.velocidadscroll|e }});
						return false;
					});

                    });
                })(jQuery);
            </script>
        {% endif %}
{% endblock %}
